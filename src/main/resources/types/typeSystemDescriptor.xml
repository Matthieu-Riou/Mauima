<?xml version="1.0" encoding="UTF-8"?>
<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">
    <name>typeSystemDescriptor</name>
    <description/>
    <version>1.0</version>
    <vendor/>
  <types>
    <typeDescription>
      <name>types.TextualSegment</name>
      <description>textual segment delemited by syntaxical boundary</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
    </typeDescription>
  <typeDescription>
      <name>types.NGram</name>
      <description>ngram type</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>length</name>
          <description>length of the NGram: 2 for bigram, 3 for trigram, ...</description>
          <rangeTypeName>uima.cas.Byte</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
  <typeDescription>
      <name>types.Candidate</name>
      <description>candidate</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>frequency</name>
          <description>the frequency of the candidate</description>
          <rangeTypeName>uima.cas.Integer</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>last_occ</name>
          <description>last occurence of the candidate</description>
          <rangeTypeName>uima.cas.Integer</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>name</name>
          <description>the topic title of the candidate</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>tf</name>
          <description>term frequency</description>
          <rangeTypeName>uima.cas.Integer</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>df</name>
          <description>document frequency</description>
          <rangeTypeName>uima.cas.Integer</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>idf</name>
          <description>inverse document frequency</description>
          <rangeTypeName>uima.cas.Integer</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>first_occ</name>
          <description>first occurence of the candidate</description>
          <rangeTypeName>uima.cas.Integer</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
  </types>
</typeSystemDescription>
